<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="hu.petrik.etlap.etlap.controllers.MainController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <HBox prefHeight="50.0" prefWidth="200.0">
        <children>
            <Button maxWidth="150.0" onAction="#onHozzaadButton" prefWidth="125.0" text="Új étel felvétele">
                <HBox.margin>
                    <Insets right="10.0" />
                </HBox.margin>
                <font>
                    <Font size="14.0" />
                </font></Button>
            <Button maxWidth="150.0" mnemonicParsing="false" onAction="#onTorlesButton" prefWidth="100.0" text="Törlés">
                <font>
                    <Font size="14.0" />
                </font></Button>
        </children>
    </HBox>
   <TitledPane animated="false" text="Áremelés">
     <content>
       <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="100.0" prefWidth="200.0">
            <children>
               <HBox prefHeight="50.0" prefWidth="490.0">
                  <children>
                     <Spinner prefWidth="160.0">
                         <valueFactory>
                             <SpinnerValueFactory.IntegerSpinnerValueFactory amountToStepBy="5"  max="50" min="5" />
                         </valueFactory>
                        <opaqueInsets>
                           <Insets />
                        </opaqueInsets></Spinner>
                     <Label text="\%">
                        <padding>
                           <Insets left="10.0" />
                        </padding>
                        <font>
                           <Font size="14.0" />
                        </font>
                     </Label>
                     <Button mnemonicParsing="false" prefWidth="100.0" text="Emelés">
                        <HBox.margin>
                           <Insets left="10.0" />
                        </HBox.margin>
                     </Button>
                  </children>
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </padding>
                </HBox>
            </children>
            <opaqueInsets>
               <Insets right="5.0" top="5.0" />
            </opaqueInsets>
            <padding>
               <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding></AnchorPane>
     </content>
      <padding>
         <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
      </padding>
   </TitledPane>
    <TableView fx:id="etlapTable" maxHeight="400.0" maxWidth="500.0" onMouseClicked="#leirasMegjelenit" prefHeight="200.0" prefWidth="650.0">
        <columns>
            <TableColumn fx:id="etlapNev" maxWidth="350.0" prefWidth="200.0" text="Név" />
            <TableColumn fx:id="etlapKategoria" maxWidth="300.0" prefWidth="155.0" text="Kategória" />
            <TableColumn fx:id="etlapAr" maxWidth="150.0" prefWidth="140.0" text="Ár (Ft)" />
        </columns>
    </TableView>
    <TextArea fx:id="etlapLeiras" prefHeight="100.0" prefWidth="200.0" />
</VBox>
